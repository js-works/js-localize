{
  "compilerOptions": {
    "allowJs": false,
    "target": "ESNext",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "lib": ["ES2021", "dom"],
    "esModuleInterop": true,
    "baseUrl": "./src/main",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "paths": {
      "js-localize": ["js-localize.ts"]
    },
    "typeRoots": ["node_modules/@types"],
    "types": []
  },
  "files": ["src/main/js-localize.ts"],
  "include": ["src/main/**/*.ts"],
  "exclude": ["node_modules"]
}
